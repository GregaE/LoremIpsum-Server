// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id         String            @id @default(cuid())
  username        String            @db.VarChar(255)
  email           String            @db.VarChar(255)
  password        String            @db.VarChar(255)
  session         String            @db.VarChar(255)
  personal_detail PersonalDetails[]
  skills          Skills[]
  certificates    Certificates[]
  languages       Languages[]
  work_experience WorkExperience[]
  education       Education[]
  saved_cv        SavedCV[]
}

model Skills {
  id          String @id @default(cuid())
  name        String @db.VarChar(255)
  description String @db.Text
  user        User   @relation(fields: [id], references: [user_id])
}

model Certificates {
  id          String @id @default(cuid())
  name        String @db.VarChar(255)
  description String @db.Text
  user        User   @relation(fields: [id], references: [user_id])
}

model Languages {
  id            String @id @default(cuid())
  language_name String @db.VarChar(255)
  level         String @db.Text
  user          User   @relation(fields: [id], references: [user_id])
}

model WorkExperience {
  id          String   @id @default(cuid())
  job_title   String   @db.VarChar(255)
  company     String   @db.VarChar(255)
  city        String   @db.VarChar(255)
  country     String   @db.VarChar(255)
  start_date  DateTime @db.Date
  end_date    DateTime @db.Date
  description String   @db.Text
  user        User     @relation(fields: [id], references: [user_id])
}

model Education {
  id          String   @id @default(cuid())
  degree      String   @db.VarChar(255)
  city        String   @db.VarChar(255)
  country     String   @db.VarChar(255)
  start_date  DateTime @db.Date
  end_date    DateTime @db.Date
  description String   @db.Text
  user        User     @relation(fields: [id], references: [user_id])
}

model SavedCV {
  id           String   @id @default(cuid())
  saved_cv     String   @db.Text
  date_created DateTime @default(now()) @db.Date
  user         User     @relation(fields: [id], references: [user_id])
}

model PersonalDetails {
  id           String   @id @default(cuid())
  saved_cv     String   @db.Text
  date_created DateTime @default(now()) @db.Date
  user         User     @relation(fields: [id], references: [user_id])
}
